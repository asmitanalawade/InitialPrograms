package com.bridgelabz.typeOfData;

import java.io.*;

public class KDWPattern {
	
	public static void kptrn(String pattern, int startLine, int endLine) throws FileNotFoundException
	{
		File file = new File(pattern);
		BufferedReader br = new BufferedReader(new FileReader(file));
		String line = null;
		int currentLine = 1;
	  try
	  {
		
		while(currentLine < startLine)
		{
			if(line != null)
			{
				line = br.readLine();
			     //process the line
			 
		      System.out.println("file too short");
			}
			currentLine++;
			
		}
		while(currentLine <= endLine) 
		{
			line = br.readLine();
			if(line == null)
			{
				return;
			}
			System.out.println(line);
			currentLine++;
		}
			
		
	  }catch (IOException ex) 
		{
			System.out.println("Problem reading file.\n" + ex.getMessage());
		} 
		
	}

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		kptrn("/home/bridgelabz/Desktop/Programs/JavaPrograms/src/com/bridgelabz/typeOfData/KDWPattern.txt",1,9);
		
		
		
	}
	

}
